        <Label x:Name="labelUpdateDays" Content="Time Between Updates" HorizontalAlignment="Left" Margin="83,217,0,0" VerticalAlignment="Top" FontSize="14" Height="29" Width="152"/>
        <Label x:Name="labelDeactivationDays" Content="Time Between Deactivations" HorizontalAlignment="Left" Margin="390,216,0,0" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="3" Height="29" Width="183"/>
        <Label x:Name="labelDay" Content="days" HorizontalAlignment="Left" Margin="330,217,0,0" VerticalAlignment="Top" FontSize="14" Height="29" Width="38"/>
        <Label x:Name="labelDay2" Content="days" HorizontalAlignment="Left" Margin="206.69,218,0,0" VerticalAlignment="Top" FontSize="14" Grid.Column="2" Height="29" Width="38"/>
        <Label x:Name="labelManualUpdates" Content="Manual Updates" HorizontalAlignment="Left" Margin="39,267,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="126"/>
        <Separator HorizontalAlignment="Left" Height="46" Margin="39,278,-406,0" VerticalAlignment="Top" Width="1132" RenderTransformOrigin="0.425,0.168" Grid.ColumnSpan="3"/>
        <Button x:Name="buttonManualUpdate" Content="Download Update File" HorizontalAlignment="Left" Margin="109,324,0,0" VerticalAlignment="Top" Width="168" Height="35"/>
        <Button x:Name="buttonManualDeactivation" Content="Download Deactivation File" HorizontalAlignment="Left" Margin="310,324,0,0" VerticalAlignment="Top" Width="168" Height="35" Grid.ColumnSpan="3"/>
